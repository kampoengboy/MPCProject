	</footer>
</container>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
<script>

$("#update").live("click",function(){
	var a = $("#namatim").val();
	if(a=='')
	{
		alert("Isi nama tim anda");
		return false;
	}
